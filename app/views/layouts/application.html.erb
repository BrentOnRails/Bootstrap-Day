<!DOCTYPE html>
<html>
<head>
  <title>~poop.io~</title>

  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <nav class="nav navbar-default" role="navigation">
      <div class="container-fluid">

        <div class="navbar-header">
          <a class="navbar-brand" href="#">
            <p>
              p<span class="glyphicon glyphicon-cloud">
              </span>p.io
            </p>
          </a>
          <!-- this is collapsed nav -->
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>


        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <!-- this is regular display nav -->
          <ul class="nav navbar-nav">
            <li><a href="#">Home</a></li>
            <li><a href="#">Contact</a></li>
            <li><a href="#">About</a></li>
             <li class="divider"></li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <% if signed_in? %>
            <li><p class="navbar-text">Welcome <%= current_user.username %></p></li>
            <li><%= button_to "Sign Out", session_url, :method => :delete,
            class: 'btn btn-default navbar-btn' %></li>
            <% else %>
              <li><%= link_to "Sign In", new_session_url %></li>
              <li><%= link_to "Sign up", new_user_url %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <% if flash[:errors] %>
        <ul style="color:red;text-shadow: 1px 1px 1px black;">
          <% flash[:errors].each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      <br>
      <% end %>

      <%= yield %>
    </div>

  </body>
</html>
