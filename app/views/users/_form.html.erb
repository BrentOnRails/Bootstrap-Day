<% action = (user.persisted? ? user_url(user) : users_url) %>
<% method = (user.persisted? ? "put" : "post") %>
<% message = (user.persisted? ? "Update user" : "Create user") %>

<form action="<%= action %>" method="post" role="form">
  <input
     name="_method"
     type="hidden"
     value="<%= method %>">
  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">

  <div class="form-group">
    <label class="sr-only" for="user_username">Username</label>
    <input
       id="user_username"
       name="user[username]"
       type="text"
       class="form-control"
       placeholder="Username">
  </div>
  <div class="form-group">
    <label class="sr-only" for="user_password">Password</label>
    <input
       id="user_password"
       name="user[password]"
       type="password"
       class="form-control"
       placeholder="Password">
  </div>

  <button type="submit" class="btn btn-primary"><%= message %></button>
</form>